{
  "private": true,
  "name": "monowebjp-2020",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/monowebjp/monowebjp-2020.git",
  "author": "monowebjp <capybara@monoweb.jp> (https://github.com/monowebjp/)",
  "license": "MIT",
  "engines": {
    "node": "12.15.0",
    "npm": ">=6.13.4"
  },
  "scripts": {
    "start": "run-p watch server",
    "image": "node imagemin-config.js",
    "css": "run-s css:lint css:sass css:postcss",
    "css:postcss": "postcss \"dist/assets/css/**/*.css\" --base dist/assets/css/ -d dist/assets/css -c postcss.config.js",
    "css:sass": "sass --source-map-urls=relative src/assets/scss:dist/assets/css",
    "css:lint": "stylelint \"src/assets/scss/**/*.scss\" --config .stylelintrc",
    "ejs": "ejs-cli -b src/ \"**/[^_]*.ejs\" -o dist/ --options ejs.config.json",
    "fractal": "fractal start --sync",
    "js": "run-s js:lint js:ts",
    "js:ts": "webpack",
    "js:lint": "eslint src/assets/js -c .eslintrc.json --ext ts,tsx; exit 0",
    "watch": "run-p watch:*",
    "watch:ejs": "chokidar \"src/**/*.ejs\" -c \"npm run ejs\"",
    "watch:css": "chokidar \"src/assets/scss/**/*.scss\" -c \"npm run css\"",
    "watch:js": "chokidar \"src/assets/js/**/*.ts\" -c \"npm run js\"",
    "watch:image": "chokidar  \"src/**/*.(gif|jpg|png|svg)\" -c \"npm run image\"",
    "server": "run-s server:docker server:bs",
    "server:bs": "browser-sync start --config bs-config.js",
    "server:docker": "docker-compose up -d",
    "end": "run-s end:docker end:watch",
    "end:docker": "docker-compose down",
    "end:watch": "killall node",
    "update": "ncu -u"
  },
  "devDependencies": {
    "@frctl/fractal": "^1.2.1",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "autoprefixer": "^9.7.4",
    "browser-sync": "^2.26.7",
    "chokidar-cli": "^2.1.0",
    "css-mqpacker": "^7.0.0",
    "csswring": "^7.0.0",
    "ejs-cli": "^2.1.1",
    "eslint": "^6.8.0",
    "imagemin": "^7.0.1",
    "imagemin-cli": "^5.1.0",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-pngquant": "^8.0.0",
    "imagemin-svgo": "^7.0.0",
    "imagemin-webp": "^5.1.0",
    "npm-check-updates": "^4.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0",
    "postcss-sorting": "^5.0.1",
    "prettier": "^1.19.1",
    "sass": "^1.25.0",
    "stylelint": "^13.1.0",
    "stylelint-order": "^4.0.0",
    "stylelint-scss": "^3.14.2",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.5",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  }
}
